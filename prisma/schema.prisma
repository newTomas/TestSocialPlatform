generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id       BigInt @id @default(autoincrement())
  email    String
  password String

  posts Post[]
}

model Post {
  id   BigInt @id @default(autoincrement())
  text String
  User User   @relation(fields: [userId], references: [id])

  userId BigInt
}
