generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id       BigInt @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  createdAt DateTime @default(now())

  posts         Post[]
  refreshTokens RefreshToken[]
}

model Post {
  id   BigInt @id @default(autoincrement())
  text String
  User User   @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  userId BigInt
}

model RefreshToken {
  id        BigInt   @id @default(autoincrement())
  token     String
  User      User     @relation(fields: [userId], references: [id])
  expiredAt DateTime
  createdAt DateTime @default(now())

  userId BigInt
}
